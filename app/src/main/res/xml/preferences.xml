<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Категория настроек: Общие -->
    <PreferenceCategory
        android:background="@color/background_color"

        android:title="Общие настройки">

        <!-- Тёмная тема -->
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="dark_theme"
            android:summary="Включить или выключить тёмный режим приложения"
            android:title="Тёмная тема"
            app:iconSpaceReserved="false" />

        <!-- Звук уведомлений -->
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notification_sound"
            android:summary="Включить или отключить звук уведомлений"
            android:title="Звук уведомлений"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <!-- Категория настроек: Политики -->
    <PreferenceCategory
        android:title="Политики"
        >


        <!-- Политика конфиденциальности -->
        <Preference
            android:key="privacy_policy"
            android:title="Политика конфиденциальности"
            android:summary="Ознакомьтесь с нашей политикой конфиденциальности"
            app:iconSpaceReserved="false" />

        <!-- Связь с поддержкой -->
        <Preference
            android:key="contact_support"
            android:title="Связь с поддержкой"
            android:summary="Отправьте сообщение в службу поддержки"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>
</PreferenceScreen>
